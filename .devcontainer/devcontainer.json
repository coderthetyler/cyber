{
    "name": "CyberDev",
    "build": {
        "dockerfile": "Containerfile",
        "args": {}
    },
    "remoteUser": "bamboo",
    "containerUser": "bamboo",
    "containerEnv": {
        "HOME": "/home/bamboo"
    },
    "runArgs": [
        "--userns=keep-id:uid=1234,gid=1234",
        "--shm-size=256m"
    ],
    "forwardPorts": [
        8081, 8443
    ],
    "postStartCommand": "npm i",
    "customizations": {
        "vscode": {
            "settings": {
                "eslint.validate": [ "javascript", "html" ]
            },
            "extensions": [
                "rust-lang.rust-analyzer",
                "bungcip.better-toml",
                "dbaeumer.vscode-eslint",
                "eamodio.gitlens"
            ]
        }
    }
}